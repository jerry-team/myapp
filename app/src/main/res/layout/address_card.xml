<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    >
<androidx.cardview.widget.CardView
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:cardCornerRadius="10dp"
app:cardElevation="10dp"
android:layout_marginLeft="12dp"
android:layout_marginRight="12dp"
android:layout_marginTop="8dp"
android:layout_marginBottom="8dp"
    >

    <RelativeLayout
        android:id="@+id/adr_center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/background"
        >

        <ImageView
            android:id="@+id/adr_default"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"
            android:text="默认地址"
            android:scaleType="fitXY"
            android:src="@drawable/ic_check" />
        <TextView
            android:id="@+id/adr_default_text"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/adr_default"
            android:layout_marginLeft="5dp"
            android:lines="2"
            android:textColor="#ff0000"
            android:text="默认地址"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/adr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/adr_default"
            android:text="姓名"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/adr_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="35dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/adr_name"
            android:textColor="#808080"
            android:text="12345678901"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/adr_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/adr_default"
            android:lines="2"
            android:text="福建省泉州市XXXXXXXXX"
            android:textColor="#000000"
            android:textSize="15sp"
            />

        <ImageView
            android:id="@+id/adr_delete"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/adr_delete"
            android:text="删除"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/adr_edit2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/adr_delete"
            android:layout_marginTop="20dp"
            android:src="@mipmap/adr_edit"
            android:layout_marginLeft="350dp"
            android:text="编辑"

            />





    </RelativeLayout>


</androidx.cardview.widget.CardView>
</LinearLayout>