<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="4dp"
    android:background="@color/background">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="12dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_goods"
            android:text="商品名"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_toRightOf="@+id/tv_order_name"
            android:text="x1"
            android:textColor="#b5b5b5"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_orderItem_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_name"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/iv_goods"
            android:text="商品描述商品描述商品描述商品描述商品描述商品描述商品描述"
            android:textColor="#b5b5b5"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_orderItem_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_orderItem_des"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_goods"
            android:text="2580.70"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>


</LinearLayout>