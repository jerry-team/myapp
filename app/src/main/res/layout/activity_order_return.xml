<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activity.OrderReturnActivity">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        titlebar:centerText="退单"
        titlebar:centerType="textView"
        titlebar:leftDrawable="@drawable/comm_titlebar_back_normal"
        titlebar:leftDrawablePadding="0dp"
        titlebar:leftText="返回"
        titlebar:leftType="textView" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="退单原因"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_reason"
            android:background="#F1F1F1"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:hint="请输入退单理由"
            android:gravity="left|top"
            android:textColorHint="#838080"/>

        <!--结算-->
        <Button
            android:id="@+id/bt_submit"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="250dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/bg_settlement"
            android:gravity="center"
            android:text="提交"
            android:textColor="#FFF"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>


</LinearLayout>