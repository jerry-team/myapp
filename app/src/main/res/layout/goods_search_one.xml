<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardBackgroundColor="#FAFAFA"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <org.raphets.roundimageview.RoundImageView
                android:id="@+id/good_pic"
                android:layout_width="149dp"
                android:layout_height="152dp"
                android:clickable="true"
                android:src="@mipmap/cat1"
                app:border_color="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                app:border_width="1dp"
                app:corner_radius="10dp"
                app:type="round"
                />
            <TextView
                android:id="@+id/search_good_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/good_pic"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/good_pic"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/search_good_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宠可梦官方自营店"
                android:textColor="#FB9400"
                android:layout_toRightOf="@+id/good_pic"
                android:layout_below="@+id/search_good_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:drawablePadding="3dp"
                android:drawableRight="@mipmap/relocate"
                />
            <Button
                android:id="@+id/search_good_type"
                android:layout_width="69dp"
                android:layout_height="22dp"
                android:layout_below="@+id/search_good_shop"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/good_pic"
                android:background="@drawable/search_good_type_bac"
                android:text="狮子狗"
                android:textColor="@color/white" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cart_search"
                android:layout_toRightOf="@+id/good_pic"
                android:layout_marginLeft="10dp"
                android:layout_alignBottom="@id/good_pic"
                android:layout_marginBottom="2dp"
                />
            <ImageView
                android:id="@+id/search_money_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/money_search_card"
                android:layout_toLeftOf="@+id/search_good_price"
                android:layout_alignBottom="@+id/search_good_price"
                android:layout_marginBottom="5dp">
            </ImageView>

            <TextView
                android:id="@+id/search_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/good_pic"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="25dp"
                android:text="250"
                android:textColor="#FF4444"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:lines="1"
                android:textSize="23dp" />

        </RelativeLayout>

<!--        <TextView-->
<!--            android:id="@+id/search_good_name"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            />-->


    </androidx.cardview.widget.CardView>


</RelativeLayout>