<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/register_background_im1"
            android:layout_width="wrap_content"
            android:layout_height="208dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/register_background"
            />


        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/register_background_im1"
            android:layout_gravity="center"
            android:layout_marginTop="-100dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/petshop_logo" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/register_user"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/edit_rigster"
        android:layout_marginTop="20dp"

        >

        <ImageView
            android:id="@+id/user_logo"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:src="@mipmap/account"
           />

        <EditText
            android:id="@+id/user_info"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="-50dp"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="请输入用户名"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="53dp"
            android:background="@mipmap/clear_rigster" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/register_pwd"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/edit_rigster"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/pwd_logo"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:src="@mipmap/pwd"
            />
        <EditText
            android:id="@+id/pwd_info"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="请输入密码"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:inputType="textPassword"/>
        <ToggleButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/off_pwd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_re_pwd"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/edit_rigster"
        android:layout_marginTop="20dp"

        >

        <ImageView
            android:id="@+id/re_pwd_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/re_pwd"
            android:layout_marginLeft="-43dp"

            />

        <EditText
            android:id="@+id/re_pwd_info"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="-50dp"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="重复输入密码"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_email"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/edit_rigster"
        android:layout_marginTop="20dp"

        >

        <ImageView
            android:id="@+id/email_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/email"
            android:layout_marginLeft="-43dp"

            />

        <EditText
            android:id="@+id/email_info"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="-50dp"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="请输入邮箱"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_phone"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/edit_rigster"
        android:layout_marginTop="20dp"

        >

        <ImageView
            android:id="@+id/phone_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/phone"
            android:layout_marginLeft="-43dp"

            />

        <EditText
            android:id="@+id/phone_info"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="-50dp"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="请输入手机号"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:text="注册"
        android:background="@drawable/rigter_button"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回登录"
        android:textColor="#818181"
        android:clickable="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="92dp"
        android:textSize="15dp"
        />






</LinearLayout>